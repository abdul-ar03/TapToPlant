<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Task Details "
            android:id="@+id/task_txt"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="-10dp"
            android:textSize="25dp"
            android:textColor="#6EC05D" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@drawable/border_award"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Name :"
            android:id="@+id/tm_name1"
            android:layout_weight=".3"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tm_name2"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:textSize="14.5dp"
            android:textColor="#716a60"
            android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@drawable/border_award"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Mob No :"
            android:id="@+id/tm_mob1"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tm_mob2"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:textSize="14.5dp"
            android:textColor="#716a60"
            android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@drawable/border_award"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Mail ID : "
            android:id="@+id/tm_mail1"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tm_mail2"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:textSize="14.5dp"
            android:textColor="#716a60"
            android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@drawable/border_award"
        android:layout_marginBottom="4dp"
        android:id="@+id/status_div">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tm_status1"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="Status :"
            android:textSize="15dp"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tm_status2"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:textSize="14.5dp"
            android:textColor="#716a60"
            android:paddingRight="10dp"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@drawable/border_award"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Date :"
            android:id="@+id/tm_date1"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tm_date2"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:textSize="14.5dp"
            android:textColor="#716a60"
            android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".35"
        android:background="@drawable/border_award"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tm_desc1"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:text="Details :"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:gravity="top"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tm_desc2"
            android:layout_weight=".6"
            android:gravity="top"
            android:textSize="14.5dp"
            android:paddingTop="10dp"
            android:textColor="#716a60"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:nestedScrollingEnabled="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".35"
        android:background="@drawable/border_award"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Location :"
            android:id="@+id/tm_loc1"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="top"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/tm_loc2"
                android:layout_weight=".6"
                android:gravity="top|center_vertical"
                android:textSize="14.5dp"
                android:paddingTop="10dp"
                android:textColor="#6EC05D"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:nestedScrollingEnabled="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/map_icn"
                android:layout_alignParentRight="true"
                android:src="@drawable/map_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:onClick="map_activity"
                android:padding="10dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@drawable/border_award"
        android:layout_marginBottom="10dp"
        android:id="@+id/code_div">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="TTP code :"
            android:id="@+id/tm_code1"
            android:layout_weight=".3"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="#665e51"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/tm_code2"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:textSize="14.5dp"
            android:textColor="#716a60"
            android:paddingRight="10dp" />
    </LinearLayout>
</LinearLayout>