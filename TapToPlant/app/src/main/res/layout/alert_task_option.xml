<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/wall2"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_margin="0.1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Open Task"
            android:id="@+id/e_open"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight=".2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_award"
            android:textColor="#FF6B655A"
            android:textStyle="bold"
            android:textSize="14.5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Modify Task"
            android:id="@+id/e_modify"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight=".2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_award"
            android:textColor="#FF6B655A"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textSize="14.5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Delete Task"
            android:id="@+id/e_delete"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight=".2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_award"
            android:textColor="#FF6B655A"
            android:textStyle="bold"
            android:textSize="14.5dp" />

    </LinearLayout>
</LinearLayout>